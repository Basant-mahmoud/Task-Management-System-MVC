@model IEnumerable<Task_Management_System.Controllers.DTO.ProjectDto>

@{
    ViewData["Title"] = "Projects";
}

<h2>Projects</h2>
<a href="/Project/Create" class="btn btn-success">Create Project</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Project ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var project in Model)
    {
        <tr>
            <td>@project.Id</td>
            <td>@project.Title</td>
            <td>@project.Description</td>
             <td>@project.Status</td>
              <td>@project.StartDate</td>
              <td>@project.EndDate</td>

            <td>
                <a href="@Url.Action("Details", "Projects", new { id = project.Id })" class="btn btn-info btn-sm">Details</a>
                <a href="@Url.Action("Edit", "Projects", new { id = project.Id })" class="btn btn-warning btn-sm">Edit</a>
                <a href="@Url.Action("Delete", "Projects", new { id = project.Id })" class="btn btn-danger btn-sm">Delete</a>
                <a href="@Url.Action("Create", "Tasks", new { id = project.Id })" class="btn btn-success btn-sm">Create Task</a>
            </td>
        </tr>
    }
    </tbody>
</table>


